class Solution:
    def validMountainArray(self, arr: List[int]) -> bool:
        if len(arr) < 3:
            return False
        maxnum = float('-inf')
        for pos, num in enumerate(arr):
            if num > maxnum:
                pivot = pos
                maxnum = num
        if pivot == 0 or pivot == len(arr)-1:
            return False
        
        seen = set()
        for i in range(0, pivot+1):
            if (i > 0 and arr[i] < arr[i-1]) or (arr[i] in seen):
                return False
            seen.add(arr[i])
        seen = set()
        
        for i in range(pivot, len(arr)):
            if (i > pivot and arr[i] > arr[i-1]) or arr[i] in seen:
                return False
            seen.add(arr[i])
        return True
        
        
        